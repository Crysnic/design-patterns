{% extends "base.html.twig" %}

{% block title %}{{ name }}{% endblock %}

{% block body %}
    <div class="bg-light p-5 rounded">
        <h1>{{ name }}</h1>

        {% for descriptionDatum in description %}
            {% if loop.first %}
                <p class="lead">{{ descriptionDatum }}</p>
            {% else %}
                <p>{{ descriptionDatum }}</p>
            {% endif %}
        {% endfor %}

        {% if link|length > 0 %}
            <p><a class="btn btn-link" href="{{ link }}" target="_blank">Детально</a></p>
        {% endif %}

        {% if realisation is not null %}
            {{ dump(realisation) }}
        {% endif %}

        {% if example is not null %}
            <div class="pt-3">
                <h3>Пример</h3>
                <hr>
                <pre>{{ example.code }}</pre>
                <p>{{ example.description }}</p>
            </div>
        {% endif %}

        {% if note is not null %}
            <div class="alert alert-info" role="alert">{{ note }}</div>
        {% endif %}
    </div>
{% endblock %}